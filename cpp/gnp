set multiplot layout 2,2 rowsfirst

file1 = "sods.dat"

pointtype = 7
pointsize = 0.5

unset key
set grid

#set format y "%.4e"

# prepare statistics
# stats file u 2 name 'd' nooutput
# stats file u 3 name 'v' nooutput
# stats file u 4 name 'p' nooutput
# stats file u 5 name 's' nooutput

# density
set ylabel 'Density'
  plot file1 u 1 with points pt pointtype ps pointsize

# velocity
set ylabel 'MomentumX'
  plot file1 u 2 with points pt pointtype ps pointsize

# pressure
set ylabel 'MomentumY'
  plot file1 u 3 with points pt pointtype ps pointsize

# entropy
set ylabel 'TotalEnergy'
  plot file1 u 4 with points pt pointtype ps pointsize

unset multiplot
